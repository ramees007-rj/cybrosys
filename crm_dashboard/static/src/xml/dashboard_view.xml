<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="CRMdashboard">
<!--        <div>-->
        <div class="container">
            <div class="row" style="border-bottom:1px solid gray;">
                <div class="col-sm">
                <span style="font-size:28px;padding:10px;">CRM Dashboard</span>
                </div>
                <div class="col-sm">
                    <span style="padding:10px;float: right;">
                        <select name="filter" id="filter"
                                style="width:5cm;"
                                class="form-select border rounded"
                                aria-label="Default select example">
                         <option value="this_year">This Year</option>
                            <option value="this_quarter">This Quarter</option>
                            <option value="this_month">This Month</option>
                            <option value="this_week">This Week</option>
                     </select>
                    </span>
                </div>
            </div>
            <div class="row" style="margin:1cm;">
             <div class="col-sm">
                 <div class="card" style="width: 18rem;">
                        <div class="card-body" id="leads">
                            <span class="font-weight-bold">My Leads</span>
                            <br/>
                            <span id="lead_count"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body" id="opportunity">
                            <span class="font-weight-bold">My Opportunity</span>
                            <br/>
                            <span id="opportunity_count"></span>
                        </div>
                    </div>
                </div>
             </div>
            <div class="row" style="margin:1cm;">
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <span class="font-weight-bold">Expected Revenue:</span>
                            <br/>
                            <span id="expected_revenue"></span>
                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <span class="font-weight-bold">Revenue:</span>
                            <br/>
                            <span id="revenue"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin:1cm;">
                <div class="col-sm">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                        <span class="font-weight-bold">Won Amount:</span>
                            <span id="won_amount"></span>
                            <br/>
                            <span class="font-weight-bold">Lost Amount:</span>
                            <span id="lost_amount"></span>
                            <br/>
                            <span class="font-weight-bold">Percentage:</span>
                            <span id="ratio"></span>
                            <br/>
                        </div>
                    </div>
                </div>
            </div>
</div>
        <!--        </div>-->
        <!--        <div class="oh_dashboards">-->


        <!--        </div>-->
    </t>
</templates>