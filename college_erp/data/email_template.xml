<odoo>
    <data>
        <record id="email_template_confirm" model="mail.template">
            <field name="name">admission: Send by email</field>
            <field name="model_id" ref="college_erp.model_admission"/>
            <field name="email_from">rameesjaman41@gmail.com</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Admission Approved</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear,
                        <t t-out="object.first_name"/><br/>
                        You got admission in college.<br/>
                        Admission NO:<t t-out="object.admission_no"/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>