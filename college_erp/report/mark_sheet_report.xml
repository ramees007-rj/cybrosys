<odoo>
    <record id="student_mark_sheet_popup_action" model="ir.actions.act_window">
        <field name="name">Student Mark sheet</field>
        <field name="res_model">mark.sheet.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="student_mark_sheet_popup_form" model="ir.ui.view">
        <field name="name">Student Mark sheet form</field>
        <field name="model">mark.sheet.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="report_type" widget="radio"/>
                        <field name="student_id"
                               attrs="{'invisible':[('report_type','!=','student_wise')],'required':[('report_type','=','student_wise')]}"/>
                        <field name="class_id"
                               attrs="{'invisible':[('report_type','!=','class_wise')],'required':[('report_type','=','class_wise')]}"/>
                        <field name="semester"/>
                        <field name="exam_type"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" class="btn-primary"
                            type="object" string="Print PDF"/>
                    <button name="action_print_xlsx" class="btn-primary"
                            type="object" string="Print xlsx"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_mark_sheet_student" model="ir.actions.report">
        <field name="name">Mark Sheet student</field>
        <field name="model">mark.sheet.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">college_erp.mark_sheet_report_student</field>
        <!--        <field name="print_report_name">report-pdf</field>-->
    </record>
    <record id="action_mark_sheet_class" model="ir.actions.report">
        <field name="name">Mark Sheet class</field>
        <field name="model">mark.sheet.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">college_erp.mark_sheet_report_class</field>
        <!--        <field name="print_report_name">report-pdf</field>-->
    </record>
    <menuitem id="report"
              name="Report"
              parent="college_main_menu"
              sequence="8"/>
    <menuitem id="student_mark_sheet"
              name="Student Mark sheet"
              parent="report"
              action="student_mark_sheet_popup_action"
              sequence="8"/>
</odoo>