<odoo>
    <record id="student_subject_action" model="ir.actions.act_window">
        <field name="name">Student Subject Action</field>
        <field name="res_model">college.student.subject</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="student_subject_form" model="ir.ui.view">
        <field name="name">Student Subject Form</field>
        <field name="model">college.student.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="course"/>
                            <field name="semester"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="mark"/>
                            <field name="pass_mark"/>
                            <field name="max_mark"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>