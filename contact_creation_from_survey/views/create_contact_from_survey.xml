        <!--                <page string="Contact Relation">-->
        <!--&lt;!&ndash;                <field name="contact_relation_id"/>&ndash;&gt;-->
        <!--                </page>-->

        <!--            </xpath>-->
        <!--        </template>-->
    </data>
</odoo>