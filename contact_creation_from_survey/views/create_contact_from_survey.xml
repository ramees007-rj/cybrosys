<odoo>
    <data>
        <record id="create_contact_tree_view"
                model="ir.ui.view">
            <field name="name">tree view</field>
            <field name="model">create.contact.survey</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="question_id" string="Question"/>
                    <field name="fields_id" string="Customer"/>
                </tree>
            </field>
        </record>

        <record id="action_contact_creation" model="ir.actions.act_window">
            <field name="name">Contact creation</field>
            <field name="res_model">create.contact.survey</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    contact creation details
                </p>
            </field>
        </record>

        <record id="custom_survey_view" model="ir.ui.view">
            <field name="name">survey view</field>
            <field name="model">survey.survey</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='options']" position="after">

                    <page string="Customer Relation">
                        <field name="contact_relation_ids">
                                <tree editable="bottom">
                                    <field name="fields_id"/>
                                    <field name="question_id"/>
                                </tree>
                        </field>
                    </page>

                </xpath>
            </field>
        </record>


        <!--        <template id="" inherit_id="survey.survey_form"-->
        <!--                  priority="8">-->
