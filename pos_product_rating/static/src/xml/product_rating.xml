<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="Rating" t-inherit="point_of_sale.ProductItem"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//i[hasclass('product-info-button')]"
               position="attributes">
            <attribute name="style">left:25px;</attribute>
        </xpath>
        <xpath expr="//i[hasclass('product-info-button')]" position="before">
            <span class="product-info-button">
                <t t-esc="props.product.product_quality"/>&#9733;
            </span>
        </xpath>
    </t>
    <t t-name="ProductRating" t-inherit="point_of_sale.OrderLinesReceipt"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//t[@t-foreach='receipt.orderlines']"
               position="inside">
            <t t-if="line.product_quality">
                <br/>
                <span class="pos-receipt-left-padding">
                    Rating:
                    <t t-esc="line.product_quality"/>
                </span>
            </t>
        </xpath>
    </t>
</templates>