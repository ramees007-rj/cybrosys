<odoo>
    <data>
        <record id="estate_model_action" model="ir.actions.act_window">
            <field name="name">Property Details</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="view_property_details_tree" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree string="property_tree">
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="living_area"/>
                    <field name="Expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </tree>
            </field>
        </record>
        <record id="view_property_details_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="property_from">
                    <header>
                        <button name="sold_item" type="object" string="Sold"/>
                        <button name="canceled" type="object" string="Cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <group>
                                <field name="status"/>
                                <field name="tag" widget="many2many_tags" />
                                <field name="property_type"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="Expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="total_area"/>
                                        <field name="garden_orientation"/>
                                    </group>
                                </page>
                                <page string="Offers">
                                    <group>
                                        <field name="offer_id">
                                            <tree>
                                                <field name="price"/>
                                                <field name="partner_id"/>
                                                <field name="validity"/>
                                                <field name="date_deadline"/>
                                                <button name="validate" string="validate" type="object"/>
                                                <field name="status"/>
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                                <page string="Other Info">
                                    <group>
                                        <field name="property_user"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="one2many" model="ir.actions.act_window">
            <field name="name">Price Details</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="view_property_details_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="estate property">
                    <field name="name" string="Title"/>
                    <field name="bedrooms" string="bedRooms"/>
                    <field name="garden_orientation"/>
                    <separator/>
                    <filter string="bedroom 1" name="bedroom" domain="[('bedrooms','=','1')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Orientation" name="bedrooms" domain="[]" context="{'group_by': 'bedrooms'}"/>
                    </group>
                </search>
            </field>
        </record>
        <menuitem id="estate_main_menu"
                  name="Real Estate"
                  action="estate_model_action"
                  sequence="-1"/>

        <menuitem id="estate_advertisements"
                  name="Advertisements"
                  parent="estate_main_menu"
                  sequence="0"/>
        <menuitem id="estate_settings"
                  name="Settings"
                  parent="estate_main_menu"
                  sequence="1"/>
        <record id="estate_product_type_action" model="ir.actions.act_window">
            <field name="name">Property Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="view_property_type_form" model="ir.ui.view">
            <field name="name">property type form</field>
            <field name="model">estate.property.type</field>
            <field name="arch" type="xml">
                <form string="property_type_from">
                    <sheet>
                        <field name="name"/>
                    </sheet>
                </form>
            </field>
        </record>
        <menuitem id="settings_product_types"

                  name="Property Types"
                  parent="estate_settings"
                  action="estate_product_type_action"
                  sequence="0"/>
        <record id="estate_property_tag_action" model="ir.actions.act_window">
            <field name="name">Property Tag</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="settings_product_tags"
                  name="Property Tags"
                  parent="estate_settings"
                  action="estate_property_tag_action"
                  sequence="1"/>
    </data>
</odoo>