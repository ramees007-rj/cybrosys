<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_braintree" model="payment.acquirer">
            <field name="name">Braintree</field>
            <field name="display_as">Credit Card(Powered by Braintree)</field>
            <field name="inline_form_view_id" ref="inline_form"/>
            <field name="provider">braintree</field>
            <field name="sequence">1</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="image_128" type="base64" file="braintree_payment_gateway/static/src/img/braintree_icon.png"/>
            <field name="description" type="html">
                <p>
                    A payment gateway to accept online payments via credit/debit cards.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment
                    </li>
                    <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking
                    </li>
                </ul>
            </field>
        </record>

    </data>

    <record id="payment_method_braintree" model="account.payment.method">
        <field name="name">Braintree</field>
        <field name="code">braintree</field>
        <field name="payment_type">inbound</field>
    </record>
</odoo>
